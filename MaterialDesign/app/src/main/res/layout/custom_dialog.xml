<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="#1d629f"
                android:elevation="15dp">

    <Button
        android:id="@+id/btn_dialog_Yes"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="44dp"
        android:layout_marginLeft="26dp"
        android:background="@drawable/buttons_effac"
        android:text="YES"
        android:textColor="#ffffff"
        tools:ignore="HardcodedText"/>

    <Button
        android:id="@+id/btn_dialog_no"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/btn_dialog_Yes"
        android:layout_alignBottom="@+id/btn_dialog_Yes"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:background="@drawable/buttons_effac"
        android:text="NO"
        android:textColor="#ffffff"
        tools:ignore="HardcodedText"/>

    <TextView
        android:id="@+id/textDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:text="ARE YOU SURE WANT TO LOG OUT?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:textSize="14sp"
        tools:ignore="HardcodedText"/>

</RelativeLayout>